@model CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Referans Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">Referans ekleme işleminin yapıldığı sayfadır. Lütfen Bilgileri eksiksiz doldurunuz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputBrand">Referans Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referans Ad ve Soyad Giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Referans Unvanı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Tİtle" placeholder="Referans Unvanı Giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Referans Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImage" asp-for="ImageUrl" placeholder="Görsel Seçiniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Resim</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Yorumunuzu Yapınız"></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Ekle</button>
                            <a href="/Admin/AdminTestimonial/Index" class="btn btn-warning waves-effect waves-light">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
