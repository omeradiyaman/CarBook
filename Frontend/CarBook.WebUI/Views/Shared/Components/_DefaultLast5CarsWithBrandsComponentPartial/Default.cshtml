@model List<ResultLast5CarsWithBrandsDto>
@{
    Random random = new Random();
}

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Sizin İçin Önerilerimiz</span>
                <h2 class="mb-2">Öne Çıkan Araçlarımız</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @foreach (var item in Model)
                    {
                        var randomAmount = random.Next(20, 151) * 10;
                        <div class="item">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CoverImageUrl);">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a href="#"></a>@item.Model</h2>
                                    <div class="d-flex mb-3">
                                        <span class="cat" style="font-weight: bold; color: #333; margin-right: 10px;">@item.BrandName</span>
                                        <p class="price ml-auto" style="font-size: 1rem; color: #007bff; font-weight: bold;">₺@randomAmount <span style="font-size: 0.9rem;">/Günlük</span></p>
                                    </div>
                                    <p class="d-flex mb-0 d-block">
                                        <a href="/Reservation/Index/@item.CarId" class="btn btn-primary py-2 mr-1">Hemen Kirala</a>
                                        <a href="Car/CarDetail/@item.CarId" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
