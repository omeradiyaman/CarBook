@model List<ResultAllBlogsWithAuthorsDto>
@{
}

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Popüler Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Yazarlarımızın Beğenilen Blogları
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tr>
                        <th>#</th>
                        <th>Blog Başlığı</th>
                        <th>Yazar</th>
                        <th>Bloğu Aç</th>
                    </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.CoverImageUrl" alt="Cover Image" style="width: 100px; height: auto;" /> </td>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal">@item.Title</h5></td>
                                <td><h5 class="font-size-17 mb-1 font-weight-normal">@item.AuthorName</h5></td>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal"><a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-primary">Blogu Aç</a></h5></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div> 