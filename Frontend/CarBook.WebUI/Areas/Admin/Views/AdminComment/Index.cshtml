@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="Blogd">
                    <div class="Blogd-body">
                        <h2 class="Blogd-title">Yorum Listesi</h2>
                        <h3 class="Blogd-subtitle mb-4">
                            Bloglarla ilgili yorumların gösterildiği sayfadır, alakasız yorumları silebilirsiniz.
                        </h3>
                        @foreach (var item in Model)
                        {
                            count++;
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Yorum - @count</h5>
                                    <div class="card-body">
                                        <h4 class="card-title" style="display: flex; align-items: center;">
                                            <img src="@item.ImageUrl" width="100" height="100" style="margin-right:10px; border-radius: 50%;object-fit:cover;" />
                                            <div>
                                                <span style="font-size: 1.2rem; font-weight: bold; color: #333;">Yorum Yapan</span><br />
                                                <span style="font-size: 1.5rem; font-weight: bold; color: #333; text-shadow: 1px 1px 2px rgba(0,0,0,0.2);">@item.Name</span>
                                            </div>
                                        </h4>

                                        <h2>Yorum Yapılan Blog <br />@item.Title</h2>
                                        <p class="card-text" style="font-size: 0.9rem; color: #555;">
                                            <strong>@item.Description</strong>
                                        </p>
                                        <a href="/Admin/AdminComment/Index" class="btn btn-warning waves-effect waves-light">Geri Dön</a>
                                        <a href="/Admin/AdminComment/DeleteComment/@item.CommentId" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
