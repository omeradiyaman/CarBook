@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazar Bilgileri Güncelleme</h4>
                        <p class="card-subtitle mb-4">Yazar bilgileri aşağıdaki panelden güncelleyebilirsiniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="AuthorId" />
                                <label for="exampleInputBrand">Yazar Adı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Yazar Adı Giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescrition" asp-for="Description" placeholder="Açıklamayı Giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Resim Url</label>
                                <input type="text" class="form-control" id="exampleInputVideo" asp-for="ImageUrl" placeholder="Yazar Görsel Url' sini Giriniz.">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazar Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

