@model List<ResultCarPricingsWithTimePeriodsDto>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Araç Kiralama ÜCretleri</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Popüler Araçlarımızın Saatlik - Günlük - Aylık Fiyatları
            </p>

            <div class="table-responsive">
                <table class="table table-centered table-hover table-xl mb-0" id="recent-orders">
                    <thead>
                        <tr>
                            <th class="border-top-0">Marka & Model</th>
                            <th class="border-top-0">Saatlik Fiyat</th>
                            <th class="border-top-0">Günlük Fiyat</th>
                            <th class="border-top-0">Aylık Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-truncate">₺ @item.BrandAndModel</td>
                                <td class="text-truncate">₺ @item.HourlyAmount</td>
                                <td class="text-truncate">₺ @item.DailyAmount</td>
                                <td class="text-truncate">₺ @item.MonthlyAmount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 