@model List<ResultLocationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Bilgileri Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfa ve Araç Kiralama sayfasında yer alan araçların alınış ve bırakılış noktalarını temsil eden Lokasyon Sayfasıdır. Aşağıda Araç Kiralama Noktalarına ait lokasyon bilgileri yer almaktadır.
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count == 0)
                            {
                                <div class="alert alert-warning">Herhangi Bir Lokasyon Alanı Bulunamadı</div>
                            }
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Konum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminLocation/DeleteLocation/@item.LocationId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/Admin/AdminLocation/LocationDetails/@item.LocationId" class="btn btn-outline-dark">Konumu Gör</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminLocation/CreateLocation" class="btn btn-info">Yeni Lokasyon Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

