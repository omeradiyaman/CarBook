@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Marka Özelliği Güncelleme</h4>
                        <p class="card-subtitle mb-4">Marka ile ilgili özellikleri aşağıdaki kutucuğa doldurmanız önemle rica olunur. Kaydet butonuna basmayı unutmayınız.</p>

                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="BrandId" />
                                <label for="exampleInputBrand">Marka Adı</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Name" placeholder="Marka Girişi Yapınız.">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



