@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Sosyal Medya Sayfası Yeni Link Giriş Alanı</h4>
                        <p class="card-subtitle mb-4">Sosyal medya hesaplarınıza ait veri güncelleme işlemlerini buradan yapabilirsiniz. Ikonlarla ilgili listeye ikon listesi üzerinden ulaşabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaId" />
                            <div class="form-group">
                                <label for="exampleInputBrand">Sosyal Medya Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Başlığını Giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Link</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="Url" placeholder="Sosyal Medya Sayfanızın Linkini Giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Icon</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Hizmet Ikon bilgisini giriniz.">
                            </div>


                            <button type="submit" class="btn btn-success waves-effect waves-light">Sosyal Medya Bilgisini Güncelle</button>
                            <a href="/Admin/AdminSocialMedia/Index" class="btn btn-warning waves-effect waves-light">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

