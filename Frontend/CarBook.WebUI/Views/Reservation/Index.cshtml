@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success">Araç Rezervasyon Formu</h3>
        <br />
        <div class="form-group">
            <input type="hidden" asp-for="CarId" value="@ViewBag.id" class="form-control" placeholder="Almak İstediğiniz Araba">
        </div>
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Adınız">
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız">
        </div>
        <div class="form-group">
            <label>E-mail</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Mail Adresiniz">
        </div>
        <div class="form-group">
            <label>Telefon Numaranız</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numaranız">
        </div>
        <div class="form-group">
            <label>Araç Alış / Iade</label>
            <select  asp-for="PickUpLocationId" asp-items="@ViewBag.datas" class="custom-select">
                <option value="" >---Teslim Almak istediğiniz Lokasyon---</option>
            </select>
        </div>
        <div class="form-group">
            <select asp-for="DropOffLocationId" asp-items="@ViewBag.datas" class="custom-select">
                <option value="">---Teslim Etmek İstediğiniz Lokasyon---</option>
            </select>
        </div>
        <div class="form-group">
            <label>Yaş</label>
            <input type="text" asp-for="Age" class="form-control" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <label>Ehliyet</label>
            <input type="text" asp-for="DriverLicenceYear" class="form-control" placeholder="Ehliyet Yılınız">
        </div>
        <div class="form-group">
            <label>Açıklama</label>
            <textarea asp-for="Description" id="" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>
