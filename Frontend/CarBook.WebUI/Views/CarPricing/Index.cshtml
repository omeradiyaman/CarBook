@model List<ResultCarPricingsWithTimePeriodsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    Random random = new();
}


<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="car-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th class="bg-primary heading">Saatlik Ücret</th>
                                <th class="bg-dark heading">Günlük Ücret</th>
                                <th class="bg-black heading">Aylık Ücret</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var rating = random.Next(3, 6);
                                <tr class="">
                                    <td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
                                    <td class="product-name">
                                        <h3>@item.BrandAndModel</h3>
                                        <p class="mb-0 rated">
                                            <span>rated:</span>
                                            @for (int i = 0; i < rating; i++)
                                            {
                                                <span class="ion-ios-star"></span> <!-- Dolu yıldız -->
                                            }
                                        </p>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="/Reservation/Index/@item.CarId">Hemen Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small>@item.HourlyAmount</span>
                                                <span class="per">/Saatlik</span>
                                            </h3>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="/Reservation/Index/@item.CarId">Hemen Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small>@item.DailyAmount</span>
                                                <span class="per">/Günlük</span>
                                            </h3>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="/Reservation/Index/@item.CarId">Hemen Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small>@item.MonthlyAmount</span>
                                                <span class="per">/Aylık</span>
                                            </h3>
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

