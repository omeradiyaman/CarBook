@model CreateFooterAddressDto

@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Adres Girişi</h4>
                        <p class="card-subtitle mb-4">Adres alanına ait bilgileri aşağıdaki panelden girebilirsiniz. Tema bütünlüğünün bozulmaması adına lütfen sadece 1 adres girişi yapınız. Mevcut adres bilgisi varsa güncelleyiniz. Yeni adres girecekseniz öncekini siliniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputAddress">Adres Adı</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Adres Adı Giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPhoneNumber">Telefon Numarası</label>
                                <input type="text" class="form-control" id="exampleInputPhoneNumber" asp-for="PhoneNumber" placeholder="Telefon Numarasını Giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail">E-mail</label>
                                <input type="text" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="E-mail adresini giriniz.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklamayı Giriniz.">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adres Bilgisini Ekle</button>
                            <a href="/Admin/AdminFooterAddress/Index" class="btn btn-warning waves-effect waves-light">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


