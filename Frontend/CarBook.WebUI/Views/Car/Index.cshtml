@model List<ResultCarPricingWithCarDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    Random random = new();
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                var randomAmount = random.Next(20, 151) * 10;
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CoverImageUrl);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="car-single.html">@item.Model</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@item.Brand</span>
                                <p class="price ml-auto">₺@randomAmount<span>/Günlük</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block">
                                <a href="/Reservation/Index/@item.CarId" class="btn btn-primary py-2 mr-1">Hemen Kirala</a>
                                <a href="/Car/CarDetail/@item.CarId" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="/CarBook/Pages/2">2</a></li>
                        <li><a href="/CarBook/Pages/3">3</a></li>
                        <li><a href="/CarBook/Pages/4">4</a></li>
                        <li><a href="/CarBook/Pages/5">5</a></li>
                        <li><a href="/CarBook/Pages/5">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

