@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Banner Güncelleme</h4>
                        <p class="card-subtitle mb-4">Banner ile ilgili özellikleri aşağıdaki kutucuğa doldurmanız önemle rica olunur. Kaydet butonuna basmayı unutmayınız.</p>

                        <form method="post">
                            <input type="hidden" asp-for="BannerId" />
                            <div class="form-group">
                                <label for="exampleInputBrand">Banner Adı</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Title" placeholder="Banner Girişi Yapınız.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Description" placeholder="Banner Girişi Yapınız.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="VideoDescription" placeholder="Banner Girişi Yapınız.">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBrand">Video Url</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="VideoUrl" placeholder="Banner Girişi Yapınız.">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Banner Bilgisini Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

