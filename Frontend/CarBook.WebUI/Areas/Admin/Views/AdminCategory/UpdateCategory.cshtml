@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        
                        <h4 class="card-title">Kategori Güncelleme</h4>
                        <p class="card-subtitle mb-4">Blog Kategori Güncelleme sayfasıdır.</p>

                        <form method="post">
                            <input type="hidden" asp-for="CategoryId" />
                            <div class="form-group">
                                <label for="exampleInputBrand">Kategori Adı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Kategori Adı Giriniz.">
                            </div>

                            <button type="submit" class="btn btn-success waves-effect waves-light">Kaydet</button>
                            <a href="/Admin/AdminCategory/Index" class="btn btn-warning waves-effect waves-light">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

