@model CreateLocationDto
@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Lokasyon Girişi Sayfası</h4>
                        <p class="card-subtitle mb-4">Araçların alındığı ve teslim edildiği noktalara ait lokasyon bilgisinin girildiği sayfadır. Bilgileri eksiksiz olarak doldurunuz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputBrand">Lokasyon Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lokasyon Adı Giriniz.">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyon Bilgisini Ekle</button>
                            <a href="/Admin/AdminLocation/Index" class="btn btn-warning waves-effect waves-light">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
